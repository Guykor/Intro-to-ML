\begin_inset Formula 
\[
C_{0}^{k}\vec{v}=C_{0}^{k-1}C_{0}\vec{v}=C_{0}^{k-1}\lambda\vec{v}=...=\lambda^{k}\vec{v}
\]

\end_inset

מכאן - 
\begin_inset Formula 
\begin{align*}
C_{0}^{k}b_{0} & =C_{0}^{k}\left(a_{1}v_{1}+...+a_{n}v_{n}\right)=\left(a_{1}\lambda_{1}^{k}v_{1}+...+a_{n}\lambda_{n}^{k}v_{n}\right)\\
 & \underset{a_{1}\neq0}{=}a_{1}\lambda_{1}^{k}\left(v_{1}+\frac{a_{2}}{a_{1}}\left(\frac{\lambda_{2}}{\lambda_{1}}\right)^{k}v_{2}+...+\frac{a_{n}}{a_{1}}\left(\frac{\lambda_{n}}{\lambda_{1}}\right)^{k}v_{n}\right)
\end{align*}

\end_inset

ומפני ש-
\begin_inset Formula $\lambda_{1}>\lambda_{2}\geq...\geq\lambda_{n}$
\end_inset

, מתקיים גם 
\begin_inset Formula $\left|\frac{\lambda_{i}}{\lambda_{1}}\right|<1$
\end_inset

 לכל 
\begin_inset Formula $i\in[2,n]$
\end_inset

, ולכן 
\begin_inset Formula $\left(\frac{\lambda_{i}}{\lambda_{1}}\right)^{k}\overset{k\rightarrow\infty}{\longrightarrow}0$
\end_inset

.
 בסה
\begin_inset Quotes erd
\end_inset

כ נקבל 
\begin_inset Formula 
\[
lim_{k\rightarrow\infty}b_{k}=lim_{k\rightarrow\infty}\frac{C_{0}^{k}b_{0}}{\left\Vert C_{0}^{k}b_{0}\right\Vert }=\frac{a_{1}\lambda_{1}^{k}v_{1}}{\left\Vert a_{1}\lambda_{1}^{k}v_{1}\right\Vert }=\vec{v_{1}}
\]

\end_inset

נשים לב כי השוויון הוא עד כדי הסימן של 
\begin_inset Formula $\vec{v}$
\end_inset

.
 
\begin_inset Formula $\blacksquare$
\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
נתונים 
\begin_inset Formula $x\in\mathbb{R}^{n}$
\end_inset

 ו-
\begin_inset Formula $U\in M_{n\times n}\left(\mathbb{R}\right)$
\end_inset

 מטריצה אורתוגונלית.
 עבור 
\series bold

\begin_inset Formula $\sigma\in\mathbb{R}^{n}$
\end_inset


\series default
, נתונה הפונקציה 
\begin_inset Formula $f\left(\sigma\right)=U\text{diag}\left(\sigma\right)U^{T}x$
\end_inset

 כאשר 
\begin_inset Formula $\text{diag}\left(\sigma\right)\in\mathbb{R}^{n\times n}$
\end_inset

 המקיימת 
\begin_inset Formula 
\[
\text{diag}\left(\sigma\right)_{ij}=\begin{cases}
\sigma_{i} & i=j\\
0 & i\neq j
\end{cases}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Standard
ראשית, נשים לב כי 
\begin_inset Formula $f:\mathbb{R}^{n}\rightarrow\mathbb{R}^{n}$
\end_inset

 מקבלת וקטור 
\begin_inset Formula $\sigma$
\end_inset

, שקובע ביחידות פירוק 
\begin_inset Formula $EVD$
\end_inset

 של מטריצה כלשהי 
\begin_inset Formula $A$
\end_inset

.
 כלומר, בהינתן 
\begin_inset Formula $\sigma$
\end_inset

 מתקיים 
\begin_inset Formula $f\left(\sigma\right)=A_{\sigma}x$
\end_inset

.
 יהי 
\begin_inset Formula $B=\left(b_{1},b_{2}..,b_{n}\right)$
\end_inset

 בסיס או
\begin_inset Quotes erd
\end_inset

נ של ו
\begin_inset Quotes erd
\end_inset

ע של 
\begin_inset Formula $A_{\sigma}$
\end_inset

 )וקטורי העמודה של 
\begin_inset Formula $U$
\end_inset

(, אזי נוכל להציג את 
\begin_inset Formula $x$
\end_inset

 כהטלה או
\begin_inset Quotes erd
\end_inset

ג על המרחב בבסיס 
\begin_inset Formula $B$
\end_inset

, כלומר 
\begin_inset Formula $x=\sum_{i=1}^{n}\left\langle x,b_{i}\right\rangle b_{i}$
\end_inset

.
 מכאן, 
\end_layout

\begin_layout Standard
נובע כי 
\begin_inset Formula 
\begin{align*}
f(\sigma) & =A_{\sigma}x=\sum_{i=1}^{n}\left\langle x,b_{i}\right\rangle A_{\sigma}b_{i}=\sum_{i=1}^{n}\left\langle x,b_{i}\right\rangle \sigma_{i}\cdot b_{i}\\
 & =\left\langle x,b_{1}\right\rangle \sigma_{1}\cdot\left[\begin{array}{c}
b_{1}^{1}\\
\vdots\\
b_{1}^{n}
\end{array}\right]+\dots+\left\langle x,b_{n}\right\rangle \sigma_{n}\cdot\left[\begin{array}{c}
b_{n}^{1}\\
\vdots\\
b_{n}^{n}
\end{array}\right]\\
 & =\left[\begin{array}{c}
\left\langle x,b_{1}\right\rangle \sigma_{1}\cdot b_{1}^{1}+\dots+\\
\vdots\\
\left\langle x,b_{1}\right\rangle \sigma_{1}\cdot b_{1}^{n}+\dots+
\end{array}\begin{array}{c}
\left\langle x,b_{n}\right\rangle \sigma_{n}b_{n}^{1}\\
\vdots\\
\left\langle x,b_{n}\right\rangle \sigma_{n}b_{n}^{n}
\end{array}\right]
\end{align*}

\end_inset

נגדיר לכל 
\begin_inset Formula $i\in[n]$
\end_inset

 פונקציה 
\begin_inset Formula $f_{i}:\mathbb{R}^{n}\rightarrow\mathbb{R}$
\end_inset

 כך ש- 
\begin_inset Formula $f_{i}\left(\sigma\right)=\sum_{k=1}^{n}\left\langle x,b_{k}\right\rangle \sigma_{k}\cdot b_{k}^{i}$
\end_inset

.
 אזי 
\begin_inset Formula $f\left(\sigma\right)=\left[\begin{array}{c}
f_{1}\left(\sigma\right)\\
f_{2}\left(\sigma\right)\\
\vdots\\
f_{n}\left(\sigma\right)
\end{array}\right]$
\end_inset

.
 
\begin_inset Newline newline
\end_inset

כעת, לכל 
\begin_inset Formula $i,j\in[n]$
\end_inset

 נתבונן בנגזרת החלקית 
\begin_inset Formula 
\[
\frac{\partial f_{i}\left(\sigma\right)}{\partial\sigma_{j}}=\left\langle x,b_{j}\right\rangle b_{j}^{i}
\]

\end_inset

 ולכן מההגדרה מתקיים - 
\begin_inset Formula 
\begin{align*}
J_{\sigma}\left(f\right) & =\left[\begin{array}{ccc}
\frac{\partial f_{1}\left(\sigma\right)}{\partial\sigma_{1}} & \dots & \frac{\partial f_{1}\left(\sigma\right)}{\partial\sigma_{n}}\\
\vdots &  & \vdots\\
\frac{\partial f_{n}\left(\sigma\right)}{\partial\sigma_{1}} & \dots & \frac{\partial f_{n}\left(\sigma\right)}{\partial\sigma_{n}}
\end{array}\right]=\left[\begin{array}{ccc}
\left\langle x,b_{1}\right\rangle b_{1}^{1} & \dots & \left\langle x,b_{n}\right\rangle b_{n}^{1}\\
\vdots &  & \vdots\\
\left\langle x,b_{1}\right\rangle b_{1}^{n} & \dots & \left\langle x,b_{n}\right\rangle b_{n}^{n}
\end{array}\right]\\
 & =\left[\begin{array}{ccc}
| &  & |\\
\left\langle x,b_{1}\right\rangle b_{1} & \dots & \left\langle x,b_{n}\right\rangle b_{n}\\
| &  & |
\end{array}\right]
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
בהינתן 
\begin_inset Formula $y\in\mathbb{R}^{n}$
\end_inset

, תהי 
\begin_inset Formula $h:\mathbb{R}^{n}\rightarrow\mathbb{R}$
\end_inset

 המוגדרת על ידי 
\begin_inset Formula $h\left(\sigma\right)=\frac{1}{2}\left\Vert f\left(\sigma\right)-y\right\Vert ^{2}$
\end_inset

, נגדיר 
\begin_inset Formula $T:\mathbb{R}^{n}\rightarrow\mathbb{R}$
\end_inset

 על ידי 
\begin_inset Formula $T\left(\vec{v}\right)=\frac{1}{2}\left\Vert \vec{v}\right\Vert ^{2}$
\end_inset

, ואת 
\begin_inset Formula $g:\mathbb{R}^{n}\rightarrow\mathbb{R}^{n}$
\end_inset

 באמצעות 
\begin_inset Formula $g\left(\vec{v}\right)=\vec{v}-\vec{y}$
\end_inset

.
 מכאן, מתקיים 
\begin_inset Formula $h=T\circ g\circ f$
\end_inset

 ונובע מכלל השרשרת 
\begin_inset Formula $J_{\sigma}\left(h\right)=J_{g\circ f\left(\sigma\right)}(T)\cdot J_{g\left(\sigma\right)}(g)\cdot J_{\sigma}(f)$
\end_inset

.
 
\begin_inset Newline newline
\end_inset

יהי 
\begin_inset Formula $v\in\mathbb{R}^{n}$
\end_inset

.
 
\begin_inset Formula $T(v)=\frac{1}{2}\sum_{i=1}^{n}v_{i}^{2}$
\end_inset

 ולכן לכל 
\begin_inset Formula $i\in[n]$
\end_inset

, 
\begin_inset Formula $\frac{\partial T(v)}{\partial v_{i}}=v_{i}$
\end_inset

 כלומר 
\begin_inset Formula $J_{v}(T)=v^{T}\in\mathbb{R}^{1\times n}$
\end_inset

.
 לכל 
\begin_inset Formula $i\in[n]$
\end_inset

 נגדיר 
\begin_inset Formula $g_{i}(v)=v_{i}-y_{i}$
\end_inset

 ולכן 
\begin_inset Formula $\frac{\partial g_{i}(v)}{\partial v_{i}}=\delta_{ij}$
\end_inset

 ומכאן 
\begin_inset Formula $J_{v}(g)=I_{n}$
\end_inset

.
 בסה
\begin_inset Quotes erd
\end_inset

כ נקבל - 
\begin_inset Formula 
\begin{align*}
J_{\sigma}\left(h\right) & =J_{g\circ f\left(\sigma\right)}(T)\cdot J_{g\left(\sigma\right)}(g)\cdot J_{\sigma}(f)\\
 & =\left[\begin{array}{ccc}
\left(A_{\sigma}x\right)_{1}-y_{1} & \dots & \left(A_{\sigma}x\right)_{1}-y_{1}\end{array}\right]I_{n}J_{\sigma}(f)\\
 & =\left[\begin{array}{c}
\left(\sum_{j=1}^{n}\left\langle x,b_{j}\right\rangle \sigma_{j}\cdot b_{j}^{1}\right)-y_{1}\\
\vdots\\
\left(\sum_{j=1}^{n}\left\langle x,b_{j}\right\rangle \sigma_{j}\cdot b_{j}^{1}\right)-y_{1}
\end{array}\right]^{T}\cdot\left[\begin{array}{ccc}
| &  & |\\
\left\langle x,b_{1}\right\rangle b_{1} & \dots & \left\langle x,b_{n}\right\rangle b_{n}\\
| &  & |
\end{array}\right]
\end{align*}

\end_inset

נסמן 
\begin_inset Formula $\left[\begin{array}{c}
\left(\sum_{j=1}^{n}\left\langle x,b_{j}\right\rangle \sigma_{j}\cdot b_{j}^{1}\right)-y_{1}\\
\\
\left(\sum_{j=1}^{n}\left\langle x,b_{j}\right\rangle \sigma_{j}\cdot b_{j}^{1}\right)-y_{1}
\end{array}\right]^{T}:=\left[\begin{array}{c}
u_{1}\\
\vdots\\
u_{n}
\end{array}\right]^{T}=u^{T}$
\end_inset

 ולכן 
\begin_inset Formula $\nabla h(\sigma)=J_{\sigma}(f)^{T}u$
\end_inset

.
\end_layout

\begin_layout Enumerate
נחשב את היעקוביאן של פונקציית ה- 
\begin_inset Formula $\text{Softmax }$
\end_inset

.
 
\begin_inset Formula $g\left(\boldsymbol{z}\right)_{j}=\frac{e^{z_{j}}}{\sum_{k=1}^{K}e^{z_{k}}}$
\end_inset

.
 לכל 
\begin_inset Formula $i\in[K]$
\end_inset

 נגדיר 
\begin_inset Formula $f_{i}\left(z\right)=e^{z_{i}}$
\end_inset

, ו-
\begin_inset Formula $h\left(\boldsymbol{z}\right)=\sum_{k=1}^{K}e^{z_{k}}$
\end_inset

.
 מתקיים 
\begin_inset Formula $\frac{\partial g(z)_{i}}{\partial z_{j}}=\frac{\partial}{\partial z_{j}}\frac{f_{i}(z)}{h}$
\end_inset

, כאשר 
\begin_inset Formula $\frac{\partial f_{i}(\boldsymbol{z})}{\partial z_{j}}=\begin{cases}
e^{z_{j}} & i=j\\
0 & i\neq j
\end{cases}$
\end_inset

, ו- 
\begin_inset Formula $\frac{\partial h\left(\boldsymbol{z}\right)}{\partial z_{j}}=e^{z_{j}}$
\end_inset

.
 הראינו בכיתה כי עבור 
\begin_inset Formula $i=j$
\end_inset

, 
\begin_inset Formula 
\[
\frac{\partial g\left(\boldsymbol{z}\right)_{i}}{\partial z_{j}}=g(\boldsymbol{z})_{i}\left(1-g(\boldsymbol{z})_{i}\right)
\]

\end_inset

 ועבור 
\begin_inset Formula $i\neq j$
\end_inset

 מתקיים -
\begin_inset Formula 
\begin{align*}
\frac{\partial}{\partial z_{j}}\frac{f_{i}(z)}{h} & =\frac{0\cdot\sum_{k=1}^{K}e^{z_{k}}-e^{z_{j}}\cdot e^{z_{i}}}{\left(\sum_{k=1}^{K}e^{z_{k}}\right)^{2}}=-\frac{e^{z_{i}}}{\sum_{k=1}^{K}e^{z_{k}}}\cdot\frac{e^{z_{j}}}{\sum_{k=1}^{K}e^{z_{k}}}\\
 & =-g\left(\boldsymbol{z}\right)_{i}g\left(\boldsymbol{z}\right)_{j}
\end{align*}

\end_inset

לפיכך - 
\begin_inset Formula 
\[
J_{\boldsymbol{z}}\left(g\right)=\left[\begin{array}{ccc}
g(\boldsymbol{z})_{1}\left(1-g(\boldsymbol{z})_{1}\right) & \dots & -g\left(\boldsymbol{z}\right)_{1}g\left(\boldsymbol{z}\right)_{n}\\
\vdots & \ddots & \vdots\\
-g\left(\boldsymbol{z}\right)_{n}g\left(\boldsymbol{z}\right)_{1} & \dots & g(\boldsymbol{z})_{n}\left(1-g(\boldsymbol{z})_{n}\right)
\end{array}\right]
\]

\end_inset


\end_layout

