\begin_layout Enumerate
עבור המכפלה הסטנדרטית, מתקיים - 
\begin_inset Formula 
\begin{align*}
\left(||Ax||_{2}\right)^{2} & =\left\langle Ax,Ax\right\rangle =\underset{dot\:product}{\underbrace{Ax\cdot Ax}}=\left(Ax\right)^{T}Ax\\
 & =x^{T}A^{T}Ax\underset{A^{T}=A^{-1}}{=}x^{T}x=x\cdot x=\left\langle x,x\right\rangle =\left(\left\Vert x\right\Vert _{2}\right)^{2}
\end{align*}

\end_inset


\begin_inset Formula 
\[
\overset{sqrt\:mono.}{\Longrightarrow}\left\Vert Ax\right\Vert _{2}=\left\Vert x\right\Vert _{2}
\]

\end_inset


