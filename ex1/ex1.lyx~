\begin_inset Formula 
\begin{align*}
b_{k+1} & =\frac{C_{0}b_{k}}{||C_{0}b_{k}||}=\frac{C_{0}\cdot\left(\frac{C_{0}b_{k-1}}{||C_{0}b_{k-1}||}\right)}{||C_{0}\left(\frac{C_{0}b_{k-1}}{||C_{0}b_{k-1}||}\right)||}=\frac{\frac{C_{0}^{2}b_{k-1}}{||C_{0}b_{k-1}||}}{\left\Vert \frac{C_{0}^{2}b_{k-1}}{||C_{0}b_{k-1}||}\right\Vert }=\frac{\frac{C_{0}^{2}b_{k-1}}{\cancel{||C_{0}b_{k-1}||}}}{\frac{\left\Vert C_{0}^{2}b_{k-1}\right\Vert }{\cancel{||C_{0}b_{k-1}||}}}\\
 & =\frac{C_{0}^{2}b_{k-1}}{\left\Vert C_{0}^{2}b_{k-1}\right\Vert }=...=\frac{C_{0}^{k+1}b_{0}}{\left\Vert C_{0}^{k+1}b_{0}\right\Vert }
\end{align*}

\end_inset

